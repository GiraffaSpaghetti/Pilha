public class Main {
  private No base;
  private No topo;
  private String nomeDaPilha;
  //Construtor da classe Pilha
  public Main(String nome) {
    nomeDaPilha = nome;
  }
   public Main() {
    nomeDaPilha = "Pilha Teste";
    base = topo = null;
  }

  public void Empilha(String item) {
    if (Vazia())
      base = topo = new No(item);
    else {
      topo.setProx(new No(item));
      topo = topo.getProx();
    }
  }
  public String Desempilha() {
  if (Vazia()) {
    return null;
  }
  String item = topo.getDado();
  if (base == topo)
    base = topo = null;
  else {
    No atual = base;
    while (atual.getProx() != topo){
      atual = atual.getProx();
      topo = atual;
    atual.setProx(null);
    }
  }
  return item;
  }

  public boolean Vazia() {
    return base == null;
  }

  public String Topo(){
    return topo.getDado();
  }

  public void NumElementos(){
    int cont=0;
    if (Vazia()) {
      System.out.println("\nPilha contem 0 elementos");
      return;
    }
    No atual = base;
    while (atual != null) {
      atual = atual.getProx();
      cont++;
    }
    System.out.println("\nPilha contem "+ cont +" elementos");
  }

  public void Pares(){
    int cont=0;
    if (Vazia()) {
      System.out.println("\nPilha contem 0 elementos");
      return;
    }
    No atual = base;
    while (atual != null) {
      atual = atual.getProx();
      cont++;
      atual = atual.getProx();
    }
    System.out.println("\nPilha contem "+ cont +" elementos");
  }

  public void Impares(){
    int cont=0;
    if (Vazia()) {
      System.out.println("\nPilha contem 0 elementos");
      return;
    }
    No atual = base;
    while (atual != null) {
      atual = atual.getProx();
      atual = atual.getProx();
      cont++;
    }
    System.out.println("\nPilha contem "+ cont +" elementos");
  }

  public String EscrevePilha() {
    String temp = "";
    if (Vazia()) {
      temp += "Vazia " + nomeDaPilha;
      return temp;
    }
    temp += "a " + nomeDaPilha + " contem: \n\n";
    No atual = base;
    while (atual != null) {
      temp += atual.getDado() + ", ";
      atual = atual.getProx();
    }
    temp += "\n";
    return temp;
  }


  public static void main(String[] args) {
    Main p1 = new Main();
    p1.Empilha("el01");
    p1.Empilha("el02");
    p1.Empilha("el03");
    p1.Empilha("el04");

    System.out.println(p1.Topo());
    p1.NumElementos();
  
    p1.Pares();
    p1.Impares();

    System.out.println(p1.EscrevePilha());
  }
}
